                          whileHover={{ scale: 1.1 }}
                          whileTap={{ scale: 0.9 }}
                        >
                          {item.emoji}
                        </motion.span>
                        {item.name}
                        {item.badge && (
                          <span className={`ml-auto px-2 py-1 text-xs rounded ${
                            item.badge === "New" 
                              ? "bg-green-100 text-green-800" 
                              : "text-purple-600"
