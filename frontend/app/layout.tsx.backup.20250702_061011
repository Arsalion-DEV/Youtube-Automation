const inter = Inter({ subsets: ["latin"] });

// Navigation items with their routes
const navigationItems = [
  { name: "Dashboard", href: "/", icon: Home, emoji: "ðŸ " },
  { name: "Channels", href: "/channels", icon: Users, emoji: "ðŸ“º", badge: "âœ¨" },
  { name: "Videos", href: "/videos", icon: Video, emoji: "ðŸŽ¬" },
  { name: "Multi-Platform", href: "/multi-platform", icon: Globe, emoji: "ðŸŒ", badge: "New" },
